<Window x:Class="ProyectoClienteServidorVMS.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoClienteServidorVMS.Views"
        xmlns:viewmodels="clr-namespace:ProyectoClienteServidorVMS.ViewModels"
        mc:Ignorable="d"
        Title="MainView"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="600"
        Width="1000">
    <Window.DataContext>
        <viewmodels:VMSViewModel x:Name="vmvms"/>
    </Window.DataContext>
    <Window.Resources></Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".3*" />
            <ColumnDefinition Width=".7*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
                Background="LightGreen" />
        <!--#REGION LISTBOX COLUMNA 0 DEL GRID-->
        <ListBox Grid.Column="0"
                 Margin="10"
                 SelectedItem="{Binding Vms}"
                 SelectedIndex="{Binding Indicevms}"
                 ItemsSource="{Binding ListaVMS}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <StackPanel Margin="0,0,20,0">
                            <TextBlock Text="{Binding Linea1}" />
                            <TextBlock Text="{Binding Linea2}" />
                            <TextBlock Text="{Binding Linea3}" />
                        </StackPanel>
                        <Button Background="#fc5110"
                                Width="30"
                                Command="{Binding Source={x:Reference vmvms},Path=EliminarCommand }"
                                CommandParameter="{Binding .}" />
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!--#ENDREGION LISTBOX COLUMNA 0 DEL GRID-->
        <!--#REGION POSTE DEL VMS-->
        <Border Width="70"
                Grid.Column="1"
                Background="#797B70"
                BorderBrush="#121212"
                BorderThickness="3,3,3,0"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Height="400" />
        <!--#ENDREGION POSTE DEL VMS-->
        <!--#REGION PANTALLA VMS-->
        <Border Width="600"
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,0,40"
                Background="#E5C93D"
                BorderBrush="#121212"
                BorderThickness="2"
                Padding="10"
                Grid.Column="1">
            <Border Background="#2C2E39"
                    BorderBrush="#121212"
                    BorderThickness="10">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="20,30">
                    <Grid Margin="0,0,0,15">
                        <!--#REGION LINEA 1-->
                        <TextBlock Text="{Binding Vms.Linea1}"
                                   Style="{StaticResource TipoLetra}">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="12"
                                                  ShadowDepth="0"
                                                  Color="{Binding Vms.ColorLinea1}"
                                                  Direction="0" />
                            </TextBlock.Effect></TextBlock>
                        <TextBlock Text="{Binding Vms.Linea1}"
                                   Foreground="White"
                                   Style="{StaticResource TipoLetra}">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="12"
                                                  ShadowDepth="0"
                                                  Color="{Binding Vms.ColorLinea1}"
                                                  Direction="0" />
                            </TextBlock.Effect></TextBlock>
                    </Grid>
                    <!--#ENDREGION LINEA 1-->
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="{Binding Vms.Linea2}"
                                   Style="{StaticResource TipoLetra}">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Color="{Binding Vms.ColorLinea2}"
                                                  Direction="0" />
                            </TextBlock.Effect></TextBlock>
                        <TextBlock Text="{Binding Vms.Linea2}"
                                   Foreground="White"
                                   Style="{StaticResource TipoLetra}">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Color="{Binding Vms.ColorLinea2}"
                                                  Direction="0" />
                            </TextBlock.Effect></TextBlock>
                    </Grid>
                    <Grid Margin="0,0,0,15">
                        <TextBlock Text="{Binding Vms.Linea3}"
                                   Style="{StaticResource TipoLetra}">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Color="{Binding Vms.ColorLinea3}"
                                                  Direction="0" />
                            </TextBlock.Effect></TextBlock>
                        <TextBlock Text="{Binding Vms.Linea3}"
                                   Foreground="White"
                                   Style="{StaticResource TipoLetra}">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="15"
                                                  ShadowDepth="0"
                                                  Color="{Binding Vms.ColorLinea3}"
                                                  Direction="0" />
                            </TextBlock.Effect></TextBlock>
                    </Grid>
                </StackPanel>
            </Border>
        </Border>
        <!--#ENDREGION PANTALLA VMS-->
    </Grid>
</Window>

