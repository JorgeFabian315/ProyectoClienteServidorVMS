<Window x:Class="ProyectoClienteServidorVMS.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoClienteServidorVMS.Views"
        mc:Ignorable="d"
        Title="MainView"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="600"
        Width="1000">

    <Window.Resources>
        <Style TargetType="TextBlock"
               x:Key="TipoLetra">
            <Setter Property="FontFamily"
                    Value="../Assets/#Electronic Highway Sign" />
            <Setter Property="HorizontalAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="FontSize"
                    Value="60" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".3*" />
            <ColumnDefinition Width=".7*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1"
                Background="LightGreen" />
        <!--#REGION LISTBOX COLUMNA 0 DEL GRID-->

        <!--#ENDREGION LISTBOX COLUMNA 0 DEL GRID-->

        <!--#REGION POSTE DEL VMS-->
        <Border Width="70"
                Grid.Column="1"
                Background="#797B70"
                BorderBrush="#121212"
                BorderThickness="3,3,3,0"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Height="400" />

        <!--#ENDREGION POSTE DEL VMS-->

        <!--#REGION PANTALLA VMS-->
        <Border Width="600"
                Height="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,0,40"
                Background="#E5C93D"
                BorderBrush="#121212"
                BorderThickness="2"
                Padding="10"
                Grid.Column="1">
            <Border Background="#2C2E39"
                    BorderBrush="#121212"
                    BorderThickness="10">

                <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="20,30">
                    <ListBox Grid.Column="0"
                            HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Margin="20" ItemsSource="{Binding ListaVMS}" >
                        <!-- DataTemplate para los elementos de la lista -->
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,15">
                                    <TextBlock Text="{Binding vms}"
                       Style="{StaticResource TipoLetra}">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="0"
                                      Color="#EB229A"
                                      Direction="0" />
                                        </TextBlock.Effect>
                                    </TextBlock>
                                    <TextBlock Text="{Binding vms}"
                       Foreground="White"
                       Style="{StaticResource TipoLetra}">
                                        <TextBlock.Effect>
                                            <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="0"
                                      Color="#EB229A"
                                      Direction="0" />
                                        </TextBlock.Effect>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                </StackPanel>
            </Border>

        </Border>
        <!--#ENDREGION PANTALLA VMS-->
    </Grid>
</Window>
